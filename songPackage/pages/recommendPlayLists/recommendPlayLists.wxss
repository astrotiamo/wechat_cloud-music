/* songPackage/pages/recommendPlayLists/recommendPlayLists.wxss */
.header {
  position: relative;
  width: 100%;
  height: 340rpx;
  display: flex;
  background: linear-gradient(to right,#A5C585,#C9E4AE);
}
.header .img {
  width: 260rpx;
  height: 260rpx;
  margin: 28rpx;
}
.header image {
  width: 100%;
  height: 100%;
}
.header .info {
  width: 400rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 28rpx;
}
.header .name {
  font-size: 32rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}
.header .discribe {
  font-size: 28rpx;
  color: #444;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
}

.listContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.listContainer .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listContainer .listHeader .changeMore {
  float: right;
}
.listScroll {
  height: calc(100vh - 420rpx);
}
.listScroll .scrollItem {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
  align-items: center;
}
.listScroll .scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.listScroll .scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.listScroll .scrollItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.listScroll .scrollItem .musicInfo .artist {
  font-size: 24rpx;
  color: #444;
}
.listScroll .scrollItem .iconfont {
  position: absolute;
  right: 10rpx;
  width: 80rpx;
  height: 80rpx;
}
