<!--pages/songDetail/songDetail.wxml-->
<view class="songDetailContainer">
  <image class="bg" src="{{song.al.picUrl}}"></image>
  <view class="bg-mask"></view>
  <view class="circle"></view>
  <image class="needle {{isPlay ? 'needleRotate' : ''}}" src="/static/images/song/needle.png" />
  <view class="discContainer  {{isPlay ? 'discAnimation' : ''}}">
    <image class="disc" src="/static/images/song/disc.png" />
    <image class="musicImg" src="{{song.al.picUrl}}" />
  </view>
  <!-- 歌词 -->
  <view class="lyricDisplay">
    <text>{{currentLyric}}</text>
  </view>
  <!-- 进度条 -->
  <view class="progressControl">
    <text>{{currentTime}}</text>
    <view class="barControl">
      <!-- 实时进度条 -->
      <view class="audioCurrentTimeBar" style="width: {{currentWidth + 'rpx'}};">
        <view class="audioCircle"></view>
      </view>
    </view>
    <text>{{durationTime}}</text>
  </view>
  <!-- 底部控制播放区域 -->
  <view class="musicControls">
    <text class="iconfont icon-random"></text>
    <text class="iconfont icon-diyigeshipin" id="pre" bindtap="handleSwitch"></text>
    <text 
      class="iconfont {{isPlay ? 'icon-zanting' : 'icon-tuiguangzhong'}} big"
      bindtap="handleMusicPlay"
    ></text>
    <text class="iconfont icon-zuihouyigeshipin" id="next" bindtap="handleSwitch"></text>
    <text class="iconfont icon-liebiao2"></text>
  </view>
</view>

