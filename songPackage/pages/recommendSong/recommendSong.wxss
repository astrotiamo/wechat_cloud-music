/* pages/recommendSong/recommendSong.wxss */
.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .date {
  position: absolute;
  top: 54%;
  left: 52%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-weight: bold;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.recommendSongContainer .header .date .day {
  font-size: 38rpx;
}

.listContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.listContainer .listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listContainer .listHeader .changeMore {
  float: right;
}
.listContainer .listScroll {
  height: calc(100vh - 380rpx);
}
.listContainer .scrollItem {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}
.listContainer .scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.listContainer .scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.listContainer .scrollItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.listContainer .scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  /* text-align: right; */
}