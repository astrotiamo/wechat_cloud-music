<!--pages/search/search.wxml-->
<view class="searchContainer">
  <!-- 头部区域 -->
  <view class="header">
    <view class="searchInput">
      <text class="iconfont icon-sousuo1 searchIcon"></text>
      <text class="clear" bindtap="clearSearchContent" hidden="{{!searchContent}}">X</text>
      <input 
        type="text" 
        value="{{searchContent}}"
        placeholder="{{placeholderContent}}" 
        placeholder-class="placeholder"
        bindinput="handleInputChange"
      />
    </view>
    <text class="cancle">取消</text>
  </view>
  <!-- 搜索内容展示 -->
  <block wx:if="{{searchContent.length}}">
    <view class="showSearch">
      <view class="searchContent">搜索内容：{{searchContent}}</view>
      <view class="searchList" wx:for="{{searchList}}" wx:key="id">
        <view class="searchItem">
          <text class="iconfont icon-sousuo1"></text>
          <text class="content">{{item.name}}</text>
        </view>
      </view>
    </view>
  </block>
  <!-- 热搜榜 -->
  <block wx:else>
    <view class="hotSearchContainer">
      <view class="title">热搜榜</view>
      <!-- 搜索历史记录 -->
      <view class="history" wx:if="{{historyList.length}}">
        <view class="title">历史</view>
        <view class="historyItem" wx:for="{{historyList}}" wx:key="item" bindtap="searchHistory" data-historywords="{{item}}">
          {{item}}
        </view>
        <!-- 删除 -->
        <text class="iconfont icon-qingkong delete" bindtap="deleteSearchHistory"></text>
      </view>
      <!-- 热搜列表 -->
      <view class="hotList">
        <view class="hotItem" wx:for="{{hotList}}" wx:key="searchWord">
          <text class="order">{{index + 1}}</text>
          <text class="name" bindtap="searchHotSong" data-hotwords="searchWord">{{item.searchWord}}</text>
          <image class="iconImg" wx:if="{{item.iconUrl}}" src="{{item.iconUrl}}"></image>
        </view>
      </view>
    </view>
  </block>
</view>
