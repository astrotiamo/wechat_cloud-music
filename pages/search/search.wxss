/* pages/search/search.wxss */
.searchContainer {
  padding: 0 20rpx;
}
.searchContainer .header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchContainer .searchInput {
  position: relative;
  flex: 1;
  background: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
}
.searchContainer .searchInput input {
  margin-left: 50rpx;
  height: 60rpx;
}
/* .searchContainer .searchInput .placeholder {
  color: #A5C585;
  font-size: 32rpx;
} */
.searchContainer .searchInput .searchIcon {
  position: absolute;
  left: 15rpx;
}
.searchContainer .searchInput .clear {
  position: absolute;
  z-index: 10;
  right: 30rpx;
  top: 0;
  font-size: 30rpx;
}
.searchContainer .cancle {
  width: 100rpx;
  text-align: center;
}

.showSearch .searchContent {
  color: #A5C585;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #A5C585;
}
.showSearch .searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.showSearch .searchItem .content {
  flex: 1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}

.hotSearchContainer .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
}
.history {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin: 20rpx 0;
}
.history .title {
  font-size: 28rpx;
}
.history .historyItem {
  font-size: 26rpx;
  background: #ededed;
  height: 50rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border-radius: 20rpx;
}
.history .delete {
  margin-left: auto;
}
.hotSearchContainer .hotList {
  display: flex;
  flex-wrap: wrap;
}
.hotSearchContainer .hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotSearchContainer .hotItem .order {
  margin: 0 10rpx;
}
.hotSearchContainer .hotItem .iconImg {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}