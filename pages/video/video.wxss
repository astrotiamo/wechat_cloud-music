/* pages/video/video.wxss */
.videoContainer .header {
  display: flex;
  padding: 10rpx;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header .search {
  border: 1px solid #eee;
  /* flex-grow(可拉伸): 1, flex-shrink(可压缩): 1, flex-basis(当前元素宽度): 0% */
  flex: 1; /* 导致父元素宽度为100% */
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #A5C585;
}

.navScroll {
  display: flex;
  white-space: nowrap;
  height: 70rpx;
}
.navScroll .navItem {
  padding: 0 24rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navScroll .navContent {
  box-sizing: border-box;
}
.navItem .active {
  border-bottom: 1px solid #A5C585;
}

.videoScroll {
  margin-top: 10rpx;
  /* 动态计算 */
  /* 100vh: 视口单位(vh, vw) */
  height: calc(100vh - 152rpx);
}
.videoItem {
  padding: 0 3%;
}
.videoItem image {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.videoItem .footer {
  border-top: 1rpx solid #eeeeee;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}
.videoItem .footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.videoItem .footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  flex: 1;
}
.videoItem .footer .comments_praised {
  float: right;
}
.videoItem .footer .comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}
.videoItem .footer .comments_praised .btn:after {
  border: none;
}
.videoItem .footer .comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}
.videoItem .footer .comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}