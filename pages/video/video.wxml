<view class="videoContainer">
  <!-- 头部区域 -->
  <view class="header">
    <image src="/static/images/video/video.jpg" />
    <view class="search" bindtap="toSearch">搜索歌曲</view>
    <image src="/static/images/logo.png" />
  </view>
  <!-- 导航区域 -->
  <scroll-view 
    scroll-x 
    class="navScroll" 
    enable-flex
    scroll-into-view="{{'scroll'+navId}}" 
    scroll-with-animation
  > <!-- scroll-into-view中id属性格式要以字母开头 -->
    <view class="navItem" wx:for="{{videoGroupList}}" wx:key="id" id="{{'scroll'+item.id}}">
      <view class="navContent {{navId === item.id ? 'active' : ''}}" id="{{item.id}}" bindtap="changeNav">
        {{item.name}}
      </view>
    </view>
  </scroll-view>
  <!-- 视频列表区域 -->
  <scroll-view 
    scroll-y 
    class="videoScroll"
    refresher-enabled
    bindrefresherrefresh = "handleRefresher"
    refresher-triggered = "{{isTriggered}}"
    bindscrolltolower = "handleToLower"
  >
    <view class="videoItem" wx:for="{{videoList}}" wx:key="id">
      <!-- <video src="{{item.data.previewUrl}}" poster="{{item.data.coverUrl}}" /> -->
      <image src="{{item.data.coverUrl}}" />
      <view class="content">{{item.data.title}}</view>
      <view class="footer">
        <image class="avatar" src="{{item.data.creator.avatarUrl}}"></image>
        <text class="nickName">{{item.data.creator.nickname}}</text>
        <view class="comments_praised">
          <text class="item">
            <text class="iconfont icon-xihuan2"></text>
            <text class="count">{{item.data.praisedCount}}</text>
          </text>
          <text class="item">
            <text class="iconfont icon-comment"></text>
            <text class="count">{{item.data.commentCount}}</text>
          </text>
          <button open-type="share" class="item btn">
            <text class="iconfont icon-icon"></text>
          </button>
        </view>
      </view>
    </view>
  </scroll-view>
</view>